---
import TableOfContentsHeading from '@/components/TabletOfContentsHeading.astro';

type TableOfContent = {
  depth: number;
  text: string;
  slug: string;
  subheadings: TableOfContent[];
};

const { headings } = Astro.props;

const toc = buildToc(headings);
function buildToc(headings: TableOfContent[]) {
  let toc: TableOfContent[] = [];
  let parentHeadings = new Map();
  headings.forEach((h) => {
    let heading = { ...h, subheadings: [] };
    parentHeadings.set(heading.depth, heading);
    // Change 2 to 1 if your markdown includes your <h1>
    if (heading.depth === 1 || heading.depth === 2) {
      toc.push(heading);
    } else {
      parentHeadings.get(heading.depth - 1).subheadings.push(heading);
    }
  });
  return toc;
}
---

{
  toc.length > 0 && (
    <nav class='toc'>
      <h2>目次</h2>
      <ul>
        {toc.map((heading) => (
          <TableOfContentsHeading heading={heading} class='toc__list' />
        ))}
      </ul>
    </nav>
  )
}

<style lang='scss'>
  @use '/src/scss/variables/_index' as *;
  @use '/src/scss/base/_index' as *;
  @use '/src/scss/modules/_rfs' as *;

  .toc {
    background-color: $bg;
    padding: 40px 30px;
    h2 {
      @include font-size(18px);
      font-weight: bold;
      text-align: center;
      display: flex;
      gap: 12px;
      align-items: center;
      justify-content: center;
      &::before {
        content: '';
        width: 16px;
        height: 16px;
        display: inline-block;
        vertical-align: bottom;
        background-color: currentColor;
        mask-size: contain;
        mask-position: center;
        mask-repeat: no-repeat;
        mask-image: url('data:image/svg+xml;base64,');
      }
    }
    ul {
      position: relative;
      &::before {
        content: '';
        background-color: $weak;
        position: absolute;
        width: 3px;
        top: 17px;
        bottom: 8px;
        left: 4px;
        transform: translateX(-50%);
      }
    }
    &__list {
      a {
        @include font-size(14px);
        display: flex;
        align-items: center;
        gap: 12px;
        position: relative;
        &::before {
          content: '';
          display: block;
          flex-shrink: 0;
          width: 8px;
          height: 8px;
          border-radius: 100%;
          background-color: $weak;
        }
      }
      &.is_active {
        > a::before {
          background-color: $primary;
        }
      }
    }
  }
</style>

<script>
  const smoothScroll = () => {
    const targets = document.querySelectorAll('.toc a[href^="#"]');
    targets.forEach((target) => {
      target.addEventListener('click', (event) => {
        event.preventDefault();
        const id = target.getAttribute('href');
        if (!id) return;
        const sclollToElement = document.querySelector(id);
        if (sclollToElement) {
          sclollToElement.scrollIntoView({ behavior: 'smooth' });
        }
      });
    });
  };
  smoothScroll();
  document.addEventListener('astro:after-swap', () => smoothScroll());
</script>
