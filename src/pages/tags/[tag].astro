---
import { getCollection } from 'astro:content';

import Layout from '../../layouts/Layout.astro';
import BlogPost from '../../components/BlogPost.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const uniqueTags = [...new Set(allPosts.map((post: { data: { tags: string } }) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post: { data: { tags: unknown[] } }) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={tag as string}>
  <p>{tag}のタグが付いた記事</p>
  <ul>
    {
      posts.map((post: { slug: string; data: { title: string } }) => (
        <li>
          <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} />
        </li>
      ))
    }
  </ul>
</Layout>
